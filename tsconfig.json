{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
